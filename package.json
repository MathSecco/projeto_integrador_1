{
  "name": "projeto_integrador_1",
  "version": "1.0.0",
  "description": "Sistema rural - Projeto Integrador UNIVESP",
  "scripts": {
    "dev": "concurrently \"npm:css:watch\" \"npm:runserver\"",
    "css:watch": "./node_modules/.bin/tailwindcss -i ./src/static/src/input.css -o ./src/static/css/output.css --watch",
    "build": "./node_modules/.bin/tailwindcss -i ./src/static/src/input.css -o ./src/static/css/output.css --minify",
    "runserver": "python src/modules/manage.py runserver"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "daisyui": "^5.0.27",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17"
  }
}
